@model Cyrsovay.Models.TextModel
@{
    ViewBag.Title = "Edit";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="default">
        <h2>Изменение данных студента</h2>

        @using (Html.BeginForm())
        {
    <fieldset>
        <legend>Студент</legend>

        @Html.HiddenFor(model => model.Id)

        <p>
            Имя <br />
            @Html.EditorFor(model => model.Imya)
        </p>

        <p>
            Фамилия <br />
            @Html.EditorFor(model => model.Familia)
        </p>
        <p>
            Отчество<br />
            @Html.EditorFor(model => model.Otchestvo)
        </p>
        <p>
            Группа <br />
            @Html.EditorFor(model => model.Cyrs)
        </p>
        <p>
            Специальность <br />
            @Html.EditorFor(model => model.Speciality)
        </p>
        <p>
            Состояние <br />
            @Html.EditorFor(model => model.State)
        </p>
        <p>
            Дата зачисления <br />
            @Html.EditorFor(model => model.Postypil)
        </p>
        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
        }
        <div>
            @Html.ActionLink("Вернуться назад", "Index")
        </div>
    </div>
    <script scr="~/js/bootstrap.min.js"></script>
</body>
</html>